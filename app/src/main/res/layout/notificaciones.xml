<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="765dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:fontFamily="sans-serif-black"
            android:text="Notificaciones push"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchPausar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pausar todas"
            android:textStyle="italic"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Publicaciones, historias y comentarios"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:text="Seguidos y seguidores"
            android:textStyle="italic"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:text="Mensajes de Direct"
            android:textStyle="italic"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Notificaciones push"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Correo electÃ³nico y SMS"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:textSize="12dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>